{
    "manifest_version": 3,
    "name": "BingMeUp",
    "version": "0.1",
    "icons": {
      "128": "128.png"
    },
    "description": "Unblock Bing Chat by forcing Safari to use Microsoft Edge's user agent.",
    "permissions": [
      "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": [
      "*://*.bing.com/*",
      "*://*.whatismybrowser.com/*"
    ],
    "declarative_net_request": {
      "rule_resources": [
        {
          "id": "ruleset_1",
          "enabled": true,
          "path": "rules.json"
        }
      ]
    }
}
